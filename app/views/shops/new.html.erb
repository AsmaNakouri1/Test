<div class="container">
  <center>
      <h1> Ajouter un article </h1>
  </center>


  <%= form_for @shop do |f| %>
    <% if @shop.errors.any? %>
      <div class="alert alert-danger">
        <p> <%= pluralize(@shop.errors.count, "error")%> aa : </p>
        <ul>
            <% @shop.errors.full_messages.each do |msg|%>
              <li> <%= msg %> </li>
            <% end %>
        </ul>

      </div>
    <% end %>

    <div class="form-groupe">
      <label> chain*: </label>
      <%= f.text_field :chain , class:"form-control" %>
    </div>

      <div class="form-group">

      <label> name*: </label>
      <%= f.text_field :name , class: 'form-control'%>
    </div>
    <div class="form-group">
      <label> address*: </label>
      <%= f.text_area :address , class: 'form-control'%>
    </div>
    <div class="form-group">
      <label> latitude: </label>
      <%= f.text_field :latitude , class: 'form-control'%>
    </div>
    <div class="form-group">
      <label> longitude: </label>
      <%= f.text_field :longitude , class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> city: </label>
      <%= f.text_field :city , class: 'form-control'%>
    </div>
    <div class="form-group">
      <label> zip: </label>
      <%= f.text_field :zip , class: 'form-control'%>
    </div>
    <div class="form-group">
      <label> phone: </label>
      <%= f.text_field :phone , class: 'form-control'%>
    </div>
    <div class="form-group">
      <label> country code: </label>
      <%= f.text_field :country_code , class: 'form-control'%>
    </div>
  <br>
    <div class="form-groupe">
      <button type="submit" class="btn btn-primary"> Ajouter un article </button>
      <button  class="btn btn-secondary"> Annuler </button>

    </div>
  <br>


  <% end %>
</div>
